{
  "name": "text-adventure-api",
  "version": "0.1.0-alpha.1",
  "description": "A lambda api to expose the text adventure game engine",
  "main": "lib/handler.js",
  "scripts": {
    "test": "mocha src/test/**/*test.ts --recursive --compilers ts:ts-node/register --bail",
    "cover": "nyc npm test",
    "lint": "tslint src/**/*.ts",
    "tsc": "tsc"
  },
  "nyc": {
    "include": [
      "app/*.ts",
      "app/**/*.ts"
    ],
    "exclude": [
      "typings"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json",
      "html"
    ],
    "all": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dshaneg/text-adventure-api.git"
  },
  "author": "Shane Gibbons <shanegibbons@gamestop.com> (https://github.com/dshaneg)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dshaneg/text-adventure-api/issues"
  },
  "homepage": "https://github.com/dshaneg/text-adventure-api#readme",
  "dependencies": {
    "@dshaneg/text-adventure-core": "^0.1.7",
    "aws-lambda": "^0.1.2",
    "postal": "^2.0.5"
  },
  "devDependencies": {
    "@types/aws-lambda": "0.0.22",
    "@types/chai": "^4.1.2",
    "@types/mocha": "^2.2.48",
    "@types/node": "^8.0.57",
    "@types/postal": "^1.0.28",
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "istanbul": "^0.4.5",
    "mocha": "^3.0.2",
    "nyc": "^11.4.1",
    "serverless-webpack": "^4.0.0",
    "sinon": "^1.17.5",
    "sinon-as-promised": "^4.0.2",
    "ts-loader": "^2.3.7",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "typescript": "^2.6.2",
    "webpack": "^3.6.0"
  }
}
